# LeaseMaster Production Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Database Configuration (MariaDB/MySQL)
DB_HOST=localhost
DB_NAME=leasemaster_db
DB_USER=leasemaster_user
DB_PASS=your_strong_password_here

# Session Security
# Generate with: openssl rand -base64 32
SESSION_SECRET=your_session_secret_here

# Domain Configuration
DOMAIN=theleasemaster.com
PORTAL_DOMAIN=portal.theleasemaster.com

# PHP-FPM Configuration
# Check your PHP-FPM socket path: ls -la /var/run/php/
PHP_FPM_SOCKET=/var/run/php/php8.1-fpm.sock

# Application Settings
NODE_ENV=production
APP_URL=https://theleasemaster.com
PORTAL_URL=https://portal.theleasemaster.com

# Optional: System SMS/Email Service Configuration (if needed)
# SMS_API_BASE_URL=https://your-advanta-base-url
# SYSTEM_SMS_URL=https://your-advanta-base-url/api/services/sendsms
# SYSTEM_SMS_OTP_URL=https://your-advanta-base-url/api/services/sendotp
# SYSTEM_SMS_BALANCE_URL=https://your-advanta-base-url/api/services/getbalance
# SMS_API_KEY=your_sms_api_key
# SMS_API_SECRET=your_partner_id
